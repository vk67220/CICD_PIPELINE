                    sh "docker stop database_service_project || true && docker rm database_service_project || true"
                    sh "docker run -d --name database_service_project -p 7777:80 $DOCKER_IMAGE"
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
    }
}

